@model DeerInformation.Models.Login
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3c.org/TR/1999/REC-html401-19991224/loose.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>用户登录</title>
    <link href="~/Css/Login/Default.css" type=text/css rel=stylesheet>
    <link href="~/Css/Login/xtree.css" type=text/css rel=stylesheet>
    <link href="~/Css/Login/User_Login.css" type=text/css rel=stylesheet>
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <meta http-equiv=Content-Type content="text/html; charset=gb2312">
    <meta content="MSHTML 6.00.6000.16674" name=GENERATOR>
</head>
<body id=userlogin_body>
<script>
    $('#GL_StandardCode').live('click', function () {
        var newSrc = "@Url.Action("GetValidateCodeImg", "Home")" + "?t=" + (new Date()).getTime();
        this.src=newSrc;
        return false;
    });
</script>
@using (Html.BeginForm("Login", "Home"))
{
    <div id=user_login>
        <dl>
            <dd id=user_top>
            <ul>
                <li class=user_top_l></li>
                <li class=user_top_c></li>
                <li class=user_top_r></li>
            </ul>
            <dd id=user_main>
            <ul>
                <li class=user_main_l></li>
                <li class=user_main_c>
                    <div class=user_main_box>
                        <ul>
                            <li class=user_main_text>用户名： </li>
                            <li class=user_main_input>
                                @Html.EditorFor(m => m.Account)
                            </li>
                        </ul>
                        <ul>
                            <li class=user_main_text>密 码： </li>
                            <li class=user_main_input>
                                @Html.PasswordFor(m => m.Password)

                            </li>
                        </ul>
                        <ul>
                            <li class=user_main_text>验证码： </li>
                            <li class=user_main_input>
                                @Html.EditorFor(m => m.ValidateCode)
                                @Html.CheckBoxFor(m => m.Flag)@Html.Label("记住我")
                            </li>
                        </ul>
                        <ul>
                            <li class=user_main_text>验证图片 </li>
                            
                            <li><img id="GL_StandardCode" style="cursor: pointer;" src="@Url.Action("GetValidateCodeImg", "Home")?t=@DateTime.Now.Ticks" title="看不清，点击换一张"/>

                            </li>
                        </ul>

                    </div>
                </li>
                <li class=user_main_r>
                    <input class=IbtnEnterCssClass id=IbtnEnter
                           style="BORDER-TOP-WIDTH: 0px; BORDER-LEFT-WIDTH: 0px; BORDER-BOTTOM-WIDTH: 0px; BORDER-RIGHT-WIDTH: 0px"
                           onclick=" javascript: WebForm_DoPostBackWithOptions(new WebForm_PostBackOptions('IbtnEnter', '', true, '', '', false, false)); "
                           type=image src="~/images/user_botton.gif" name=IbtnEnter>
                </li>
            </ul>
            <dd id=user_bottom>
                <ul>
                    <li class=user_bottom_l></li>
                    <li class=user_bottom_c></li>
                    <li class=user_bottom_r></li>
                </ul>
            </dd>
        </dl>
    </div><span id=ValrUserName
                    style="DISPLAY: none; COLOR: red"></span><span id=ValrPassword
                                                                   style="DISPLAY: none; COLOR: red"></span><span id=ValrValidateCode
                                                                                                                  style="DISPLAY: none; COLOR: red"></span>
    <div id=ValidationSummary1 style="DISPLAY: none; COLOR: red"></div>

    <div></div>
}
</body>
</html>
