                                                       .Width(55)
                                                       .DataIndex("Department"),

                                                       X.Column()
                                                       .Text("电话")
                                                       .Width(55)
                                                       .DataIndex("TelNum"),

                                                       X.Column()
                                                       .Text("民族")
                                                       .Width(55)
                                                       .DataIndex("Nation"),

                                                       X.Column()
                                                       .Text("雇佣状态")
                                                       .Width(55)
                                                       .DataIndex("HireState"),

                                                       X.Column()
                                                       .Text("证件类型")
                                                       .Width(55)
                                                       .DataIndex("CertificateType"),

                                                       X.Column()
                                                       .Text("证件号码")
                                                       .Width(55)
                                                       .DataIndex("CertificateNum"),

                                                       X.Column()
                                                       .Text("籍贯")
                                                       .Width(55)
                                                       .DataIndex("Nativeplace"),

                                                       X.DateColumn()
