                                                       .Text("银行类型")
                                                       .Width(55)
                                                       .DataIndex("BankType").Hidden(true),

                                                       X.Column()
                                                       .Text("学历")
                                                       .Width(55)
                                                       .DataIndex("Education"),

                                                      X.Column()
