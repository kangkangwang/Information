                                                       .DataIndex("Sex"),

                                                       X.Column()
                                                       .Text("婚姻状况")
                                                       .Width(55)
                                                       .DataIndex("MaritalStatus").Hidden(true),

                                                       X.Column()
                                                       .Text("员工类型")
                                                       .Width(55)
                                                       .DataIndex("StaffType"),

                                                       X.Column()
                                                       .Text("工作地点")
                                                       .Width(55)
                                                       .DataIndex("WorkAddress"),

