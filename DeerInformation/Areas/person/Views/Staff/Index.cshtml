                                Html.X().PagingToolbar().HideRefresh(true)
                            )
                                .ColumnModel(
                                               X.Column()
                                               .Text("工号")
                                               .Width(55)
                                               .DataIndex("ID"),

                                               X.Column()
                                               .Text("姓名")
                                               .Width(55)
                                               .DataIndex("Name"),

                                                       X.Column()
