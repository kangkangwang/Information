 X.Viewport().Layout(LayoutType.Auto).Items(
        X.TextField().ID("gid").Hidden(true).Value(ViewBag.gid),
        X.FormPanel().Layout(LayoutType.Auto).AutoScroll(true).Title(ViewBag.title)
