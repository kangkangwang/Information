@model DeerInformation.Models.V_GM_MApply

@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
    var X = Html.X();
}

@section content{
    @(X.Viewport().Layout(LayoutType.Auto).Items(
         X.Panel().Title("物料申请单明细").Layout(LayoutType.HBox).Region(Region.Center).Items
        (
            X.Container().Layout(LayoutType.Form).MarginSpec("0 5 0 5").Flex(1).Items(
                X.TextFieldFor(m => m.ApplyMaterialNo).FieldLabel("申请单号").ReadOnly(true).Flex(1).LabelWidth(60),
                X.TextFieldFor(m => m.ProjectNo).FieldLabel("项目编号").ReadOnly(true).Flex(1).LabelWidth(60),
                X.TextFieldFor(m => m.Tel).FieldLabel("联系电话").ReadOnly(true).Flex(1).LabelWidth(60),
                X.TextFieldFor(m => m.ApplyTime).FieldLabel("申请日期").ReadOnly(true).Flex(1).LabelWidth(60)),
            X.Container().Layout(LayoutType.Form).MarginSpec("0 5 0 5").Flex(1).Items(
                X.TextFieldFor(m => m.CheckProcess).FieldLabel("审核流程").ReadOnly(true).Flex(1).LabelWidth(60),
                X.TextFieldFor(m => m.ApplyMState).FieldLabel("申请状态").ReadOnly(true).Flex(1).LabelWidth(60),
                X.TextFieldFor(m => m.Name).FieldLabel("申请人").ReadOnly(true).Flex(1).LabelWidth(60),
                X.TextFieldFor(m => m.PrepaidDay).FieldLabel("预交日").ReadOnly(true).Flex(1).LabelWidth(60))
        ),    
        X.Panel().ID("panel").Layout(LayoutType.Auto)))
}


    
