@model DeerInformation.Areas.user.Models.UserData
@{
    ViewBag.Title = "Password";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
    var X = Html.X();
}

@section headtag
{

}

@section content
{
    @{
        var Frame = X.FormPanel()
            .Region(Region.Center)
            .Frame(true)
            .BodyPadding(10)
            .ModelValidation(true)
            .Layout(LayoutType.HBox)
            .Items(
            X.Container().Width(100),
            X.Container().Layout(LayoutType.VBox).Items(

                X.TextFieldFor(m => m.PasswordOrigin).InputType(Ext.Net.InputType.Password),
                X.TextFieldFor(m => m.Password).InputType(Ext.Net.InputType.Password),
                X.TextFieldFor(m => m.PasswordComfirm).InputType(Ext.Net.InputType.Password),
            X.Container().Width(260).Layout(LayoutType.HBox).Items(X.Container().Flex(1), X.Button().Text("保存").Width(70).FormBind(true).DirectClickAction("SavePassword"))
            )
            );

    }

    @(X.Viewport().Layout(LayoutType.Border).Items(Frame.AutoScroll(true)))

}
